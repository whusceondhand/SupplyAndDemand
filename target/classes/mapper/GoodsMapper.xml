<!--//根据Title查询Goods-->
<!--    List<Goods> queryGoodsByTitle(String title);-->
    <select id="queryGoodsByName" resultType="com.entity.Goods" parameterType="java.lang.String">
    SELECT *
    FROM goods
    WHERE name like CONCAT('%',#{name},'%')
    </select>

